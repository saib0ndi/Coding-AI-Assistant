# Ollama Configuration
OLLAMA_HOST=http://10.10.110.25:11434
OLLAMA_MODEL=codellama:7b-instruct

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# AI Features Configuration
ENABLE_CODE_COMPLETION=true
ENABLE_CODE_EXPLANATION=true
ENABLE_CODE_GENERATION=true
ENABLE_REFACTORING=true

# Advanced Features
ENABLE_CONTEXT_AWARENESS=true
ENABLE_MULTI_FILE_ANALYSIS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_INTELLIGENT_SUGGESTIONS=true

# Performance Settings
MAX_COMPLETION_LENGTH=500
COMPLETION_TIMEOUT=30000
CACHE_ENABLED=true
CACHE_TTL=300000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/mcp-ollama.log

# REST API Configuration
REST_API_PORT=3002
REST_API_HOST=localhost
ENABLE_REST_API=true

# Database Configuration
DATABASE_PATH=./mcp-ollama.db
ENABLE_DATABASE_LOGGING=true

# Team Collaboration
TEAM_DATABASE_PATH=./team-database.json
ENABLE_TEAM_FEATURES=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Multi-Model Support
ENABLE_MULTI_MODEL=false
FALLBACK_MODELS=codellama:7b-instruct,llama2:7b

# Testing
ENABLE_AUTO_TESTING=false
TEST_INTERVAL_HOURS=24
