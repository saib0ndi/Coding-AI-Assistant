{
  "name": "smartcode-aiassist",
  "displayName": "SmartCode-AIAssist",
  "description": "AI-powered code assistance using local Ollama models",
  "version": "1.0.10",
  "publisher": "saibondi",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-ollama.enable",
        "title": "Enable SmartCode-AIAssist"
      },
      {
        "command": "mcp-ollama.disable",
        "title": "Disable SmartCode-AIAssist"
      },
      {
        "command": "mcp-ollama.explain",
        "title": "Explain Code"
      },
      {
        "command": "mcp-ollama.fix",
        "title": "Fix Code"
      },
      {
        "command": "mcp-ollama.tests",
        "title": "Generate Tests"
      },
      {
        "command": "mcp-ollama.docs",
        "title": "Generate Documentation"
      },
      {
        "command": "mcp-ollama.openChat",
        "title": "Open SmartCode-AIAssist Chat"
      }
    ],
    "keybindings": [
      {
        "command": "mcp-ollama.nextSuggestion",
        "key": "alt+]",
        "when": "editorTextFocus"
      },
      {
        "command": "mcp-ollama.previousSuggestion",
        "key": "alt+[",
        "when": "editorTextFocus"
      },
      {
        "command": "mcp-ollama.alternatives",
        "key": "ctrl+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "mcp-ollama.acceptSuggestion",
        "key": "tab",
        "when": "editorTextFocus && mcp-ollama.suggestionVisible"
      }
    ],
    "configuration": {
      "title": "SmartCode-AIAssist",
      "properties": {
        "mcp-ollama.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable SmartCode-AIAssist suggestions"
        },
        "mcp-ollama.host": {
          "type": "string",
          "default": "https://localhost:11434",
          "description": "Ollama server host"
        },
        "mcp-ollama.serverUrl": {
          "type": "string",
          "default": "https://localhost:3077",
          "description": "MCP server URL"
        },
        "mcp-ollama.serverPath": {
          "type": "string",
          "default": "https://localhost:3077",
          "description": "MCP server path"
        },
        "mcp-ollama.model": {
          "type": "string",
          "default": "codellama:7b-instruct",
          "description": "Ollama model to use"
        },
        "mcp-ollama.useHttps": {
          "type": "boolean",
          "default": true,
          "description": "Use HTTPS for secure connections"
        },
        "mcp-ollama.suggestionDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay before showing suggestions (ms)"
        },
        "mcp-ollama.maxSuggestions": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of suggestions"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "mcp-ollama.explain",
          "when": "editorHasSelection",
          "group": "smartcode@1"
        },
        {
          "command": "mcp-ollama.fix",
          "when": "editorHasSelection",
          "group": "smartcode@2"
        },
        {
          "command": "mcp-ollama.tests",
          "when": "editorHasSelection",
          "group": "smartcode@3"
        },
        {
          "command": "mcp-ollama.docs",
          "when": "editorHasSelection",
          "group": "smartcode@4"
        },
        {
          "command": "mcp-ollama.openChat",
          "group": "smartcode@5"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.103.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^2.6.7"
  }
}
